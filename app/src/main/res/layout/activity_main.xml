<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/splashscreenbg">

    <LinearLayout
        android:id="@+id/agreementLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        android:layout_margin="100dp"


        android:background="@android:drawable/editbox_dropdown_light_frame">


        <TextView
            android:id="@+id/tvAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAgreement"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:drawableRight="@drawable/ic_check_black_24dp"
            android:layout_height="35dp"
            android:background="@drawable/main_button_style"
            android:text="OK"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:textColor="#FFF"
            />



    </LinearLayout>


    <RelativeLayout
        android:id="@+id/progLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="232dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/rescuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESCUER LOGIN"
            android:fontFamily="monospace"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_local_hospital_black_24dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@drawable/main_button_style"
            android:layout_margin="10dp"
            android:textColor="#ffff"/>

        <Button
            android:id="@+id/rescuee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER LOGIN"
            android:fontFamily="monospace"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:background="@drawable/main_button_style" />

    </LinearLayout>








</RelativeLayout>