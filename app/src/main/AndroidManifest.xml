<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arjay.erahacks">

    <!--
        The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
        Google Maps Android API v2, but you must specify either coarse or fine
        location permissions for the 'MyLocation' functionality.
   -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/eraredlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/eraredlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".RescuerLoginActivity" />
        <activity android:name=".RescueeLoginActivity" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".RescuerRegistration" />
        <activity android:name=".RescueeRegistration" />
        <activity android:name=".RescueeMapActivity" />
        <activity android:name=".RescueeSettingsActivity" />
        <activity android:name=".RescuerSettingsActivity" />
        <activity android:name=".DistanceNotifier" />
        <activity android:name=".Alarm" />
        <activity android:name=".HistoryActivity" />
        <activity android:name=".HistorySingleActivity" />
        <activity android:name=".RescuerMapActivity"></activity>
    </application>

</manifest>